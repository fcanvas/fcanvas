{
  "name": "@fcanvas/core",
  "version": "1.0.15",
  "private": true,
  "scripts": {
    "format": "prettier -w packages/*/src",
    "build": "pnpm -r --stream run build",
    "lint": "eslint packages --ext=.ts",
    "lint:fix": "pnpm lint --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "build:docs": "typedoc ./packages/fcanvas/src/index.ts --tsconfig ./packages/fcanvas/tsconfig.json",
    "release": "pnpm test && bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "typecheck": "tsc --noEmit",
    "test": "pnpm -r --stream run test",
    "ci": "pnpm format && pnpm lint --fix && pnpm typecheck"
  },
  "devDependencies": {
    "@tachibana-shin/eslint-config": "^1.0.5",
    "@types/node": "^18.6.4",
    "bumpp": "^8.2.1",
    "conventional-changelog-cli": "^2.2.2",
    "cspell": "^6.5.0",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "tsup": "^6.2.1",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4",
    "vitest": "^0.21.0"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pnpm format"
    }
  },
  "engines": {
    "node": ">=10"
  }
}
