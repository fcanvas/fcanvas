{
  "name": "@fcanvas/core",
  "version": "1.0.4",
  "private": true,
  "scripts": {
    "format": "prettier -w src packages",
    "build": "pnpm -r --stream run build",
    "lint": "eslint packages --ext=.ts",
    "lint:fix": "pnpm lint --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "pnpm lint && pnpm test && bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "typecheck": "tsc --noEmit",
    "test": "pnpm -r --stream run test"
  },
  "devDependencies": {
    "@tachibana-shin/eslint-config": "^1.0.2",
    "@types/node": "^17.0.36",
    "bumpp": "^7.1.1",
    "conventional-changelog-cli": "^2.2.2",
    "cspell": "^6.0.0",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "prettier": "^2.6.2",
    "tsup": "^6.0.1",
    "typescript": "^4.7.2",
    "vitest": "^0.13.0"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pnpm format"
    }
  },
  "engines": {
    "node": ">=10"
  }
}
